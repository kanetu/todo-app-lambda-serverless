{
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/**/*.test.(js|jsx|ts|tsx)"],
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+.ts?$": ["ts-jest",{ "useESM": true}]
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  "clearMocks": true,

  "verbose": true,
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ]
}